<div class="container">
	<div class="row">
		<h1 class="col-sm-12 book-welcome-page">Welcome BookWorms</h1>

		<% for(var i = 0; i < book.length; i++ ) { %>
			<div id="book-articles" class="col-sm-12 col-md-4 col-lg-4">
		    	<h3 id="indexTitle"><a href="/<%= book[i].id %>"><%= book[i].title %> <img id="bookIcon" src="/images/book-icon.svg"/></a></h3>
		    <p><%= book[i].description %></p>
		  </div>
		<% } %>
	</div>	
</div>